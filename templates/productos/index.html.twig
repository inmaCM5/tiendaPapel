{% extends 'base.html.twig' %}

{% block title %}Productos index{% endblock %}

{% block body %}
    <h1>Productos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Pvp</th>
                <th>Imagen</th>
                <th>Pp</th>
                <th>Unidades</th>
                <th>Proveedor</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <td>{{ producto.id }}</td>
                <td>{{ producto.codigo }}</td>
                <td>{{ producto.nombre }}</td>
                <td>{{ producto.descripcion }}</td>
                <td>{{ producto.pvp }}</td>
                <td>{{ producto.imagen }}</td>
                <td>{{ producto.pp }}</td>
                <td>{{ producto.unidades }}</td>
                <td>{{ producto.proveedor }}</td>
                <td>
                    <a href="{{ path('app_productos_show', {'id': producto.id}) }}">show</a>
                    <a href="{{ path('app_productos_edit', {'id': producto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_productos_new') }}">Create new</a>
{% endblock %}
